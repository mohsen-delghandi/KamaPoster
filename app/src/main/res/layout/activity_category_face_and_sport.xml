<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:paddingBottom="@dimen/dimen_categories_padding_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_category_nature_items_width"
                android:layout_height="@dimen/dimen_category_nature_items_height"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_woman_photos" />

            <ImageView
                android:layout_width="@dimen/dimen_category_nature_items_width"
                android:layout_height="@dimen/dimen_category_nature_items_height"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_romantic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_category_nature_items_width"
                android:layout_height="@dimen/dimen_category_nature_items_height"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_eye_and_lip" />

            <ImageView
                android:layout_width="@dimen/dimen_category_nature_items_width"
                android:layout_height="@dimen/dimen_category_nature_items_height"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_music" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_category_nature_items_width"
                android:layout_height="@dimen/dimen_category_nature_items_height"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_cinema_characters" />

            <ImageView
                android:layout_width="@dimen/dimen_category_nature_items_width"
                android:layout_height="@dimen/dimen_category_nature_items_height"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_fun" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_back"
        android:layout_width="276px"
        android:layout_height="49px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_categories_padding_bottom"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_back" />

</RelativeLayout>